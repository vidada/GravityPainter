	public void endContact(Contact contact) 
	{
		Body a =  contact.getFixtureA().getBody();
		Body b =  contact.getFixtureB().getBody();
		int aData = (Integer)a.getUserData();
		int bData =  (Integer)b.getUserData();
		if((aData == player.SENSOR_BOTTOM && bData == Gravity.TILE)|| (bData == player.SENSOR_BOTTOM && aData == Gravity.TILE))
		{
			nbcontactencour--;
			System.out.println("le contact est coupernbcontactencour" + nbcontactencour);
			if (nbcontactencour == 0)
			{
				personnage.setCanJump(false);
			}	
		}
	}


	public void beginContact(Contact contact) 
	{


		Body a =  contact.getFixtureA().getBody();
		Body b =  contact.getFixtureB().getBody();
		System.out.println(b.getUserData());
		System.out.println(a.getUserData());
		int aData =  (Integer) a.getUserData();
		int bData =  (Integer) b.getUserData();
		//test du footer du player en contact avec le sol

		if((aData == player.SENSOR_BOTTOM && bData == Gravity.TILE)|| (bData == player.SENSOR_BOTTOM && aData == Gravity.TILE))
		{
			nbcontactencour=nbcontactencour+1;
			System.out.println("le contact marche");
			personnage.setCanJump(true);

		}


		// SI LE SENSOR LEFT EST EN CONTACT AVEC UNE TILE DE GRAVITE

		for (int i = 10001; i <= 10004; i++) {
			{
				HashMap<Integer, Gravity> listContact = gravitys.InContact(personnage.getSensorBody(i).getPosition(),50);
				if(listContact != null)
				{
					for (int Key : listContact.keySet()) 
					{
						//int cData =  (Integer) listContact.get(Key).getBody().getUserData();
						if(aData == i && bData == Gravity.TILE || bData ==  i && aData == Gravity.TILE)
							{
							boolean sensorIsA = false;
							boolean sensorIsB = false;
							if(aData == i)
							{
								sensorIsA = true;
							}
							else
							{
								sensorIsB = true;
							}	
							
							int bxSimple = (int)b.getPosition().x/32;
							int bySimple = (int)b.getPosition().y/32;
							int axSimple = (int)a.getPosition().x/32;
							int aySimple = (int)a.getPosition().y/32;
							if((bxSimple == axSimple+1) &&(bySimple == aySimple+1)&& sensorIsA) || (axSimple == bxSimple+1) &&(aySimple == bySimple+1)&& sensorIsB)  )
							{
								personnage.setAngleGravitee(90);
							}
							}			
						
						System.out.println("CONTACT AVEC UNE TILE DE GRAVITE ACTIVE ! : "+ i);
						
					}
				}
			}

		}
	}}